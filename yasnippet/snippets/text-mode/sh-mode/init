case "\$1" in
    start)
	    echo -n "Starting ${1:proggy}: $1"
	    /usr/bin/$1
	    echo "."
	    ;;
    stop)
	    echo -n "Stopping $1: $1"
	    kill \`cat /var/run/$1.pid\`
	    echo "."
	    ;;
    restart)
	    echo -n "Stopping $1: $1"
	    kill \`cat /var/run/$1.pid\`
	    echo "."
	    echo -n "Starting $1: $1"
	    /usr/bin/$1
	    echo "."
	    ;;
    *)
	    echo "Usage: /etc/init.d/$1 start|stop|restart"
	    exit 1
	    ;;
esac